              <!--begin::Header-->
              <div class="card-header"><div class="card-title">Category</div></div>
              <!--end::Header-->
              <!--begin::Form-->
              <% if(locals.flash.success.length > 0) { %>
                   <div class="alert alert-success">
                    <%= locals.flash.success %>
                  </div> 

              <% } %>
              <form method="post" action="/category/insertCategory">
                <!--begin::Body-->
                <div class="card-body">
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="inputEmail3" name="category" />
                        </div>
                      </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-warning" >Add Category</button>
                    <button type="submit" class="btn float-end">Cancel</button>
                  </div>
          </div>
                
                <!--end::Body-->
                <!--begin::Footer-->
                
                <!--end::Footer-->
              </form>
